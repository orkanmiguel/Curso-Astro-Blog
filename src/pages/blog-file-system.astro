---
import BlogPost from "../components/BlogPost.astro";
import MainLayout from "../layouts/MainLayout.astro";
import { siteConfig } from "../config/config.site-config";


const posts = await Astro.glob('./posts/*.{md,mdx}');



---

<MainLayout title="Orkan Blog">
	<h1 class="text-9xl
	text-white">{siteConfig.title}</h1>

	<!-- component -->
<section class="text-white dark:bg-gray-900">
    <div class="container px-6 py-10 mx-auto">
        <h1 class="text-3xl font-semibold text-white-800 capitalize lg:text-4xl dark:text-white">
			From the blog</h1>

        <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
          
        {
            posts.map((post) => <BlogPost {...post}/>)
        }
         
       

      
        </div>
    </div>
</section>
</MainLayout>
