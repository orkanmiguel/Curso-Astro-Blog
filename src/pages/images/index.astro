---
import { Image, Picture } from 'astro:assets'
import MainLayout from 'src/layouts/MainLayout.astro'
import MaintLayout from 'src/layouts/MainLayout.astro' 

import post05Img from '@images/post-05.png'
---

<MainLayout>
    <h1 class="text-5xl text-white">Images</h1>
   
    <img loading ="eager" src="/assets/images/post-05.png" width="250" height="250">

    <h1>QUALITY LOW</h1>
    <Image src={post05Img}
    quality="high"
    width="250"
    height="250"
    alt="image del post"/>


    <h1>QUALITY HIGHT</h1>
    <Image src={post05Img}
    quality="high"
    width="250"
    height="250"
    alt="image del post"/>

    <h1>Formatos</h1>
    <Image src={post05Img}
    format="avif"
    width="250"
    height="250"
    alt="image del post"/>

    <h1>Picture</h1>
<!--     widths={[240, 540, 720, post05Img.width]}
    sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05Img.width}px`}
   -->
    <Picture src={post05Img}
    
    formats={['wbp','avif','jpeg']}
    width="250"
    height="250"
    alt="image del post"/>

    <div style={{
        height: '3000px',
    }}>



    </div>

    <img loading ="lazy" src="/assets/images/post-01.png" width="250" height="250">
</MainLayout>


<style> 
    h1 {
        @apply text-white mt-10;
    }
</style>