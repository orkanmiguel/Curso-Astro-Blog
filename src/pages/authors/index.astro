---
import { getCollection } from "astro:content"
import AuthorCard from "src/components/AuthorCard.astro";
import { siteConfig } from "src/config/config.site-config"
import MainLayout from "src/layouts/MainLayout.astro"

const authors = await getCollection('author');
---

<MainLayout title="Listado de autores">
    <section>
    <h1 class="text-9xl
	text-white">{siteConfig.title}</h1>
    <h1>Hola Mundo</h1>
</section>



<section class="grid grid-cols-1 sm:grid-cols-2 gap-2">
    {
        authors.map((author) => 
            <AuthorCard author={author}/>
        )
        }
</section>
</MainLayout>

